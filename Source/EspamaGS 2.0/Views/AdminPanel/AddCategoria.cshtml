@model Categoria
@{
    ViewData["Title"] = "AddCategoria";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section AddToHead{
	<link href="@Url.Content("~/css/admin.css")" rel="stylesheet" type="text/css" />
}
@if (TempData["msg"] != null) {
	<div class="alert alert-success alert-dismissible fade show">
		@TempData["msg"]
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}

<div class="add-card-container add-card-sm">
	<form asp-action="AddCategoria">
		<div class="login-card m-5">			
			<div>
				<h1 class="AddText">Adicionar Categoria</h1>
			</div>
			<div>
				<label asp-for="Nome">Nome</label>
				<br>
				<input asp-for="Nome" type="text" placeholder="Enter Name">
			</div>
			<div>
				<button type="submit">Adicionar</button>
			</div>
		</div>
	</form>
</div>


