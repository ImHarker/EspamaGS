@using System.Collections

@{
    ViewData["Title"] = "GerirFuncionarios";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="text-white bg-dark bg-opacity-75 p-4 favoritos-container">
	@if (!((IEnumerable<Funcionario>)ViewBag.Funcionarios).Any() && !((IEnumerable<Administrador>)ViewBag.Admin).Any()) {
		<h2>Não tem nenhum funcionário para gerir!</h2>
	}
	else {
		<h2 class="pb-2">Gerir Funcionários</h2>
		<h4 class="pb-2">Funcionários</h4>
		@if (!((IEnumerable<Funcionario>)ViewBag.Funcionarios).Any()) {
			<label class="pb-2 fs-5">Não tem nenhum funcionário para gerir!</label>
		}
		else {
			<ul class="fs-5">
				@foreach (var item in (IEnumerable<Funcionario>)ViewBag.Funcionarios) {
					<li>
						<label>@item.IdUtilizador</label>
						<a class="text-decoration-none" asp-action="EditarFuncionario" asp-route-id="@item.IdUtilizador">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
						</a>
						<a class="text-decoration-none apagar-jogo" asp-action="ApagarFuncionario" asp-route-id="@item.IdUtilizador">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
						</a>
					</li>
				}
			</ul>
		}
		<h4 class="pb-2">Administradores</h4>
		@if (!((IEnumerable<Administrador>)ViewBag.Admin).Any()) {
			<label class="pb-2 fs-5">Não tem nenhum administrador para gerir!</label>
		}
		else {
			<ul class="fs-5">
				@foreach (var item in (IEnumerable<Administrador>)ViewBag.Admin) {
					<li>
						<label>@item.IdUtilizador</label>
						<a class="text-decoration-none" asp-action="EditarFuncionario" asp-route-id="@item.IdUtilizador">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
						</a>
						<a class="text-decoration-none apagar-jogo" asp-action="ApagarAdministrador" asp-route-id="@item.IdUtilizador">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
						</a>
					</li>
				}
			</ul>
		}
	}
</div>

