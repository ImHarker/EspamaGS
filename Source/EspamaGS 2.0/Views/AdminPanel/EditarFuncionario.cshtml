@model Funcionario
@{
    ViewData["Title"] = "EditarFuncionario";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section AddToHead{
    <link href="@Url.Content("~/css/admin.css")" rel="stylesheet" type="text/css" />
}

	<div class="add-card-container add-card-sm">
	<form asp-action="EditarFuncionario">
		<div class="login-card m-5">			
			<div>
				<h1 class="AddText mb-0 pb-0">Editar Funcionário</h1>
			</div>
			<div>
				<h3 class="AddText pt-1 mb-1">'@Model.IdUtilizador'</h3>
			</div>
			<div>
				<label>Telefone</label>
				<br/>
				<input asp-for="Telefone" class="form-control form-select" type="text"/>
			</div>
			<div>
				<button type="submit">Editar</button>
			</div>
			</div>
	</form>
</div>


